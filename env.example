# Database
DATABASE_URL="file:./dev.db"

# Encryption key for Canvas tokens (generate with: node -e "console.log('base64:' + require('crypto').randomBytes(32).toString('base64'))")
CANVAS_ENCRYPTION_KEY=base64:your-32-byte-base64-encoded-key-here

# JWT secret for user sessions (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-jwt-secret-here

# OpenAI (required for AI time estimates)
OPENAI_API_KEY=
# Optional: override the default model used for estimates
# OPENAI_ESTIMATE_MODEL=gpt-4o-mini

# Environment
NODE_ENV=development
